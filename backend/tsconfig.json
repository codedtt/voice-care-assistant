{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // --- This is the key setting for ES module imports in Node/ts-node ---
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"]
}
